package chapter06;

	import java.util.Scanner;
	import java.util.Random;

	public class FancyUpDownGame {
	    // ANSI 색상 코드
	    public static final String RESET = "\u001B[0m";
	    public static final String RED = "\u001B[31m";
	    public static final String GREEN = "\u001B[32m";
	    public static final String YELLOW = "\u001B[33m";
	    public static final String CYAN = "\u001B[36m";

	    public static void main(String[] args) throws InterruptedException {
	        Scanner scanner = new Scanner(System.in);
	        Random random = new Random();
	        int answer = random.nextInt(100) + 1;
	        int guess;
	        int tries = 0;

	        printWithDelay(CYAN + "\n🌟🌟🌟 Welcome to the Fancy Up-Down Game! 🌟🌟🌟\n" + RESET, 30);
	        System.out.println(YELLOW + "Guess a number between 1 and 100!" + RESET);

	        while (true) {
	            System.out.print(CYAN + "\nEnter your guess: " + RESET);
	            guess = scanner.nextInt();
	            tries++;

	            if (guess < answer) {
	                System.out.println(RED + "🔻 Up! Try a higher number!" + RESET);
	            } else if (guess > answer) {
	                System.out.println(RED + "🔺 Down! Try a lower number!" + RESET);
	            } else {
	                System.out.println(GREEN + "\n🎉 Correct! The answer was " + answer + "." + RESET);
	                System.out.println(GREEN + "🎯 You guessed it in " + tries + " tries!" + RESET);
	                break;
	            }

	            Thread.sleep(400); // 약간의 딜레이로 연출 효과
	        }

	        printWithDelay("\nThanks for playing! 🎮\n", 40);
	        scanner.close();
	    }

	    // 글자 하나하나 타자치는 듯한 출력 함수
	    public static void printWithDelay(String text, int delay) throws InterruptedException {
	        for (char c : text.toCharArray()) {
	            System.out.print(c);
	            Thread.sleep(delay);
	        }
	    }
	}


