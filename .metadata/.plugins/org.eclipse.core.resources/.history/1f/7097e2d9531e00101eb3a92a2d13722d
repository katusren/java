package chapter06;

public class TakeTrans {

	public static void main(String[] args) {

		StdInfo stdentJames = new StdInfo("제임스", 20000);
		StdInfo stdentTom = new StdInfo("톰", 23000);

		// 버스타기(100)
		Bus bus100 = new Bus(100);
		stdentJames.takeBus(bus100);
		// stduentJames info
		stdentJames.showinfo();
		System.out.println("-----------------------");

		Bus bus999 = new Bus(999);
		stdentTom.takeBus(bus999);
		stdentTom.showinfo();
		bus999.showinfo();
		stdentJames.takeBus(bus999);
		bus999.showinfo();

	}

}
